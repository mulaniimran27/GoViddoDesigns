<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ChHomeFragment">

    <TextView
        android:id="@+id/hr_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/five_dp"
        android:text="Best of Khass re tv "
        android:textColor="@color/changeTextColor"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_hr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:minHeight="@dimen/video_height"
        android:nestedScrollingEnabled="true"
        android:orientation="horizontal"
        android:scrollbars="none" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:isScrollContainer="true"
        android:minHeight="@dimen/video_height"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:scrollbars="none" />

</LinearLayout>
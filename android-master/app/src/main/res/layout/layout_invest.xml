<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/twenty_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dp"
            android:text="Your account balance is"
            android:textColor="@color/changeTextColor"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/txt_current_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 60.15"
            android:textColor="@color/changeTextColor"
            android:textSize="@dimen/large_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_invest_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thiry_dp"
        android:gravity="center"
        android:padding="@dimen/five_dp"
        android:text="Invest in fifa videos"
        android:textColor="@color/changeTextColor"
        android:textSize="@dimen/normal_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_money_black_24dp" />

        <EditText
            android:id="@+id/edt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ex 50.00"
            android:inputType="numberDecimal"
            android:maxLength="7" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_invest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/thiry_dp"
        android:background="@color/colorMainTheme"
        android:gravity="center"
        android:text="Invest"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/ten_dp"
        android:text="Cancel"
        android:textColor="@color/changeTextColor"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />
</LinearLayout>